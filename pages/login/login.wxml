<view class="top-box">
  <view>Hi</view>
  <view class="next-text">欢迎使用iVolley智能排球训练系统!</view>
</view>
<!-- 登录、注册 -->
<view class="center-box">
  <view class="nav">
    <view class="left {{current==1?'select':''}}" bindtap="click" data-code="1">
      <text>登录</text>
    </view>
    <view class="right {{current==0?'select':''}}" bindtap="click" data-code="0">
      <text>注册</text>
    </view>
  </view>
  <!-- 登录 -->
  <view class="input-box" hidden="{{current==0}}">
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入邮箱" bindinput="getEmail1"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入登录密码" bindinput="getPassWord"/>
    </view>
    <checkbox-group bindchange="HandelItemChange">
      <checkbox class = "cb" value="student">学生</checkbox>
      <checkbox  class = "cb1" value="teacher">教师</checkbox>
    </checkbox-group>
    <view class="forget">
      <text>忘记密码?</text>
    </view>
  </view>
  <!-- 注册 -->
  <view class="input-box" hidden="{{current==1}}">
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入邮箱" bindinput="registerEmailInput"/>
    </view>
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入6位验证码" bindinput="getCode1"/>
      <text class="input-code" bindtap="getCode">{{codeText}}</text>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入姓名" bindinput="getName"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入学工号" bindinput="getNumber"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入密码" bindinput="getRegisiterPassWord"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" auto-focus placeholder="请确认密码" bindinput="getRegisiterConfirmPassWord"/>
    </view>
    <checkbox-group bindchange="HandelItemChange">
      <checkbox class = "cb" value="student">学生</checkbox>
      <checkbox  class = "cb1" value="teacher">教师</checkbox>
    </checkbox-group>
  </view>
  <view class="sumbit-btn">
    <button class="button" 
    style="background-color: #33ccff;font-size: 30rpx;" 
    type="primary" bindtap="clickMe">立即{{current==1?'登录':'注册'}}</button>
  </view>
</view>
<!-- 重影 -->
<view wx:if="{{current == 1}}">
<view class="shadow shadow-1"></view><view class="shadow shadow-2"></view>
</view>

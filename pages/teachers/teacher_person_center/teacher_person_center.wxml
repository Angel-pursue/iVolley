<t-user-center-card
  userInfo="{{userInfo}}"
  isPhoneHide="{{true}}"
  name-class="custom-name-class"
  phone-class="custom-phone-class"
  avatar-class="customer-avatar-class"
/>

<view class="content-wrapper">
  <view wx:for="{{menuData}}" wx:for-index="outIndex" wx:key="item" class="cell-box">
    <t-cell-group>
      <t-cell
        wx:for="{{item}}"
        wx:for-item="xitem"
        wx:for-index="xindex"
        wx:key="xindex"
        title="{{xitem.title}}"
        arrow="{{!xitem.icon}}"
        note="{{xitem.tit}}"
        data-type="{{xitem.type}}"
        bordered="{{false}}"
        bind:click="onClickCell"
        t-class="t-cell-padding"
      >
        <t-badge 
        count="{{MessageNum}}" 
        slot="note" 
        wx:if="{{xitem.type == 'myMessage'}}"
        />
      </t-cell>
    </t-cell-group>
  </view>
</view>
<t-tab-bar value="{{value}}" bindchange="onChangeBar" theme="tag" split="{{false}}">
    <t-tab-bar-item wx:for="{{list}}" wx:key="index" value="{{item.value}}" icon="{{item.icon}}">
      {{item.label}}
    </t-tab-bar-item>
  </t-tab-bar>
<t-toast id="t-toast" />



<t-dialog
  visible="{{showConfirm}}"
  content="确定退出登录吗？"
  confirm-btn="确认"
  cancel-btn="取消"
  bind:confirm="confirm"
  bind:cancel="cancel"
  z-index="99999"
/>
